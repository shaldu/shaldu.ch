// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id              String            @id @default(uuid())
  githubId        String            @unique
  learnCollection LearnCollection[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  lastUrl         String?
}

model LearnCollection {
  id             String           @id @default(uuid())
  title          String
  accountId      String
  account        Account          @relation(fields: [accountId], references: [id])
  pdfFile        PdfFile[]
  wordCollection WordCollection[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model PdfFile {
  id                String          @id @default(uuid())
  accountId         String          
  title             String
  path              String
  progress          Float
  learnCollectionId String
  learnCollection   LearnCollection @relation(fields: [learnCollectionId], references: [id])
  bookmarks         Bookmarks[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model Bookmarks {
  id          String   @id @default(uuid())
  title       String
  link        String
  description String
  page        Int
  pdfFileId   String
  pdfFile     PdfFile  @relation(fields: [pdfFileId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WordCollection {
  id                String          @id @default(uuid())
  title             String
  definition        String
  favorite          Boolean
  learnCollectionId String
  learnCollection   LearnCollection @relation(fields: [learnCollectionId], references: [id])
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}
